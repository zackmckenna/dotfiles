# SSH Configuration
# Usage: ssh <alias>

# Raspberry Pi - Tailscale (works anywhere)
Host pi
    HostName 100.116.74.35
    User pi
    IdentityFile ~/.ssh/id_ed25519

# Raspberry Pi - Local network (faster when on home WiFi)
Host pi-local
    HostName 192.168.1.50
    User pi
    IdentityFile ~/.ssh/id_ed25519

# Linode Server - Tailscale
Host linode
    HostName 100.88.160.126
    User root
    IdentityFile ~/.ssh/id_ed25519

# Mac (self) - for SSH from iPhone/other devices
Host mac
    HostName 100.103.116.46
    User zacharymckenna
    IdentityFile ~/.ssh/id_ed25519

# Windows Desktop - Tailscale
Host windows
    HostName 100.126.25.94
    User zack
    IdentityFile ~/.ssh/id_ed25519

# Common settings for all hosts
Host *
    ServerAliveInterval 60
    ServerAliveCountMax 3
    IdentitiesOnly yes
